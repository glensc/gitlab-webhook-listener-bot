{
  "name": "gitlab-webhook-listener-bot",
  "description": "Listen to GitLab WebHook and execute actions",
  "homepage": "https://github.com/glensc/gitlab-webhook-listener-bot",
  "license": "MIT",
  "keywords": [
    "gitlab",
    "git",
    "hook",
    "listener",
    "webhook"
  ],
  "main": "dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "ngrok": "ngrok --config ngrok.yml start app",
    "prepublishOnly": "set -e; yarn install; yarn build",
    "set-version": "yarn version --new-version $APP_VERSION --no-git-tag-version",
    "start": "tsx demo"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.0",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/node": "^18",
    "nodemon": "^3.0.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "yarn-deduplicate": "^6.0.2"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "pino": "^8.14.2",
    "pino-pretty": "^10.2.0"
  }
}
